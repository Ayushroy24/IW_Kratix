// Define an array to store cart items
let cart = [];

// Function to add an item to the cart
function addToCart(productId, productName, price) {
    cart.push({ id: productId, name: productName, price: price });
    updateCartDisplay();
}

// Function to update the cart display
function updateCartDisplay() {
    const cartItemsElement = document.getElementById('cart-items');
    cartItemsElement.innerHTML = '';

    let totalPrice = 0;

    cart.forEach(item => {
        const itemElement = document.createElement('div');
        itemElement.innerHTML = `${item.name} - $${item.price}`;
        cartItemsElement.appendChild(itemElement);

        totalPrice += item.price;
    });

    const totalPriceElement = document.getElementById('total-price');
    totalPriceElement.textContent = `Total Price: $${totalPrice.toFixed(2)}`;
}

// Function to handle checkout
function checkout() {
    // Add your checkout logic here
}

// Event listener for "Add to Cart" button clicks
document.querySelectorAll('.add-to-cart').forEach(button => {
    button.addEventListener('click', function() {
        const productId = this.getAttribute('data-product-id');
        const productName = this.parentElement.querySelector('h2').textContent;
        const price = parseFloat(this.parentElement.querySelector('p').textContent.split('$')[1]);

        addToCart(productId, productName, price);
    });
});

// Event listener for "Checkout" button click
document.getElementById('checkout').addEventListener('click', checkout);
